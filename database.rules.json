// database.rules.json
// -------------------
{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "schools": {
      ".read": "auth != null",
      ".write": "root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },
    "classes": {
      "$schoolId": {
        ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() in ['admin','principal'] " +
                 "|| " +
                 "(auth != null && root.child('users').child(auth.uid).child('role').val() === 'teacher' && data.child('className').val() === root.child('users').child(auth.uid).child('className').val())",
        ".write": "root.child('users').child(auth.uid).child('role').val() === 'admin' || root.child('users').child(auth.uid).child('role').val() === 'principal'"
      }
    },
    "appData": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    }
  }
}
